{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "./build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}